<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books & Notes</title>
    <link rel="stylesheet" type="text/css" href="./style/ratingicons.css">
</head>
<body>
  <form action="/new">
    <button type="submit">Adauga Carte</button>
  </form>
   <section id="books">
    <% books.forEach(book => { %>
    <div class="bookcard">
        <img src=<%= book.image %> alt="Book Cover" style="width: 150px;">
        <h2 class="title"><%= book.title %></h2>
        <h3 class="author"><%= book.author %></h3>
        <h4 class="gen">Gen: <%= book.type %></h4>
        <div class="rating">
         <% for(let i=0;i<book.rating;i++) {%>
            <i class="star_active"></i>
         <%}for(i=book.rating;i<5;i++){%>
             <i class="star_inactive"></i>
            <% } %>
        </div>
        <h4 class="nationality"><%= book.nationality %></h4>
        <h4 class="year"><%= book.year %></h4>
        <p class="description"><%= book.description %></p>
        <a href="/notes/<%=book.title.replace(/ /g, '_')%>"><button>Vezi Notele</button></a>
        <a href="/edit/<%=book.title.replace(/ /g, '_')%>"><button>Editeaza</button></a>
        <form action="/delete/<%=book.id%>" method="post"><button type="submit">Delete</button></form>
        <hr>
    </div>
    <% }); %>
   </section>
</body>
</html>